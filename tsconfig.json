{
    "compilerOptions": {
      "outDir": "build",
      "target": "es2022",
      "lib": ["es2020"],
      "module": "commonjs",
      "moduleResolution": "node",
      "baseUrl": ".",
      "sourceMap": true,
      "allowJs": true,
      "noEmitOnError": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "paths": {
        "*": ["*", "node_modules/*", "src/*"]
      }
    },
    "include": ["./src/**/*"],
  }